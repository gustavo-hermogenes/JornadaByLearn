animais=[]
animal=input('Digite o nome de seu animal ou digite "0" se não tiver nenhum: ')
while animal != '0':
  especie = input('Digite a espécie desse animal: ')
  animais.append([animal, especie])
  animal = input('Se tiver mais animais, digite o nome dele. Ou digite 0 se não tiver: ')
  
if len(animais) == 0:
  print('\nVocê não tem animais')
else:
  print('\nVocê tem os seguintes animais:')
  for animal in animais:
    print('A espécie de', animal[0], 'é', animal[1])
